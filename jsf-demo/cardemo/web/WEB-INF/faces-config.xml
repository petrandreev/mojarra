<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config>

   <!-- Validator -->
  <validator>
    <description>FormatValidator Description</description>
    <validator-id>FormatValidator</validator-id>
    <validator-class>cardemo.FormatValidator</validator-class>
    <attribute>
      <description>List of format patterns separated by '|'</description>
      <attribute-name>formatPatterns</attribute-name>
      <attribute-class>java.lang.String</attribute-class>
    </attribute>
  </validator>

  <!-- converter -->
  <converter>
    <description>CreditCard Converter</description>
    <converter-id>creditcard</converter-id>
    <converter-class>cardemo.CreditCardConverter</converter-class>
  </converter>
  
  <navigation-rule>
    <from-tree-id>/Storefront.jsp</from-tree-id>
    <navigation-case>
      <from-outcome>more1</from-outcome>
      <to-view-id>/more.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-tree-id>/Storefront.jsp</from-tree-id>
    <navigation-case>
      <from-outcome>more2</from-outcome>
      <to-view-id>/more.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-tree-id>/Storefront.jsp</from-tree-id>
    <navigation-case>
      <from-outcome>more3</from-outcome>
      <to-view-id>/more.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-tree-id>/Storefront.jsp</from-tree-id>
    <navigation-case>
      <from-outcome>more4</from-outcome>
      <to-view-id>/more.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-tree-id>/more.jsp</from-tree-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/buy.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>out of stock</from-outcome>
      <to-view-id>/outofstock.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-tree-id>/outofstock.jsp</from-tree-id>
    <navigation-case>
      <from-outcome>reconfigure</from-outcome>
      <to-view-id>/more.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>buy</from-outcome>
      <to-view-id>/buy.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-tree-id>/buy.jsp</from-tree-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/Customer.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-tree-id>/Customer.jsp</from-tree-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/thanks.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

