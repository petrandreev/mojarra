<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config>

  <!-- Custom Components -->

  <component>
    <component-class>components.components.UIArea</component-class>
    <component-type>Area</component-type>
  </component>

  <component>
    <component-class>components.components.GraphComponent</component-class>
    <component-type>Graph</component-type>
  </component>

  <component>
    <component-class>components.components.UIMap</component-class>
    <component-type>Map</component-type>
  </component>

  <component>
    <component-class>components.components.PaneComponent</component-class>
    <component-type>Pane</component-type>
  </component>

  <!-- Custom Renderers -->

  <render-kit>
    <render-kit-id>DEFAULT</render-kit-id>
    <render-kit-class>com.sun.faces.renderkit.html_basic.HtmlBasicRenderKit</render-kit-class>
    <renderer>
      <renderer-type>StyleSheet</renderer-type>
      <renderer-class>components.renderkit.StyleSheetRenderer</renderer-class>
    </renderer>
    <renderer>
      <renderer-type>Area</renderer-type>
      <renderer-class>components.renderkit.AreaRenderer</renderer-class>
    </renderer>
    
  </render-kit>
  
   <!-- Validator -->
  <validator>
    <description>CreditCardValidator Description</description>
    <validator-id>CreditCardValidator</validator-id>
    <validator-class>cardemo.CreditCardValidator</validator-class>
    <attribute>
      <description>Minimum character allowed</description>
      <attribute-name>minimumChar</attribute-name>
      <attribute-class>java.lang.String</attribute-class>
    </attribute>
    <attribute>
      <description>Maximum character allowed</description>
      <attribute-name>maximumChar</attribute-name>
      <attribute-class>java.lang.String</attribute-class>
    </attribute>
  </validator>

  <!-- converter -->
  <converter>
    <description>CreditCard Converter</description>
    <converter-id>creditcard</converter-id>
    <converter-class>cardemo.CreditCardConverter</converter-class>
  </converter>
  
  <message-resources>
    <message-resources-id>carDemoResources</message-resources-id>
    <message-resources-class>cardemo.CarDemoResources</message-resources-class>
    <message>
      <message-id>cardemo.CreditCardValidator.Invalid_Characters</message-id>
      <message-class>javax.faces.application.MessageImpl</message-class>
    </message>
  </message-resources>


</faces-config>
