<!-- ************ JSF build file ************************************** --> 

<project name="jsf-demo" default="build-all" basedir=".">

  <property name="Name" value="JSF Demos"/>
  <property name="name" value="jsf-demo"/>
  <property name="version" value="post-EA2"/>

<!-- ************ Per user local properties ******************************* -->

  <property file="${user.home}/build.properties"/>   <!-- User local        -->
  <property file="build.properties"/>                <!-- Component local   -->
  <property file="../build.properties"/>             <!-- Commons local     -->


<!-- ************ Where are we building into? ***************************** -->

  <!-- The base directory for compilation targets -->
  <property name="build.home" value="${basedir}/build"/>

  <!-- The base directory for the JSF API and RI -->
  <property name="jsf.api.home" value ="../jsf-api"/>
  <property name="jsf.ri.home" value ="../jsf-ri"/>

  <!-- dependent jars -->
  <property name="commons-beanutils.jar" 
            value="${jsf.ri.home}/lib/commons-beanutils.jar" />
  <property name="commons-logging.jar" 
            value="${jsf.ri.home}/lib/commons-logging.jar" />
  <property name="commons-digester.jar" 
            value="${jsf.ri.home}/lib/commons-digester.jar" />
  <property name="commons-collections.jar" 
            value="${jsf.ri.home}/lib/commons-collections.jar" />
  <property name="jstl_el.jar" 
            value="${jsf.ri.home}/lib/jstl_el.jar" />
  <property name="jsf-api.jar" 
            value="${jsf.api.home}/build/lib/jsf-api.jar" />
  <property name="jsf-ri.jar" 
            value="${jsf.ri.home}/build/lib/jsf-ri.jar" />
  <property name="webapp" value="demo" />

  <target name="call.clean">
    
    <ant target="clean" dir="templateDemo"/>

    <ant target="clean" dir="helloDuke"/>

    <ant target="clean" dir="guessNumber"/>

    <ant target="clean" dir="components"/>

    <ant target="clean" dir="cardemo"/>

    <ant target="clean" dir="nonjsp"/>

    <ant target="clean" dir="imageMapRender"/>


  </target>

  <target name="clean" depends="call.clean">
    
    <antcall target="deleteJarsFromDemo">
      <param name="demoDir" value="templateDemo"/>
    </antcall>

    <antcall target="deleteJarsFromDemo">
      <param name="demoDir" value="helloDuke"/>
    </antcall>

    <antcall target="deleteJarsFromDemo">
      <param name="demoDir" value="guessNumber"/>
    </antcall>

    <antcall target="deleteJarsFromDemo">
      <param name="demoDir" value="components"/>
    </antcall>

    <antcall target="deleteJarsFromDemo">
      <param name="demoDir" value="cardemo"/>
    </antcall>

    <antcall target="deleteJarsFromDemo">
      <param name="demoDir" value="imageMapRender"/>
    </antcall>

    <antcall target="deleteJarsFromDemo">
	<param name="demoDir" value="nonjsp"/>
    </antcall>


    <delete> 
      <fileset dir="." includes="**/*~" defaultexcludes="no"/>
      <fileset dir="." includes="**/.nbattrs" defaultexcludes="no"/>
    </delete>

  </target>

  <target name="copyJarsToDemos">

    <antcall target="copyJarsToDemo">
      <param name="demoDir" value="templateDemo"/>
    </antcall>

    <antcall target="copyJarsToDemo">
      <param name="demoDir" value="helloDuke"/>
    </antcall>

    <antcall target="copyJarsToDemo">
      <param name="demoDir" value="guessNumber"/>
    </antcall>

    <antcall target="copyJarsToDemo">
      <param name="demoDir" value="components"/>
    </antcall>

    <antcall target="copyJarsToDemo">
      <param name="demoDir" value="cardemo"/>
    </antcall>

    <antcall target="copyJarsToDemo">
      <param name="demoDir" value="imageMapRender"/>
    </antcall>

    <antcall target="copyJarsToDemo">
	<param name="demoDir" value="nonjsp"/>
    </antcall>

  </target>

  <target name="copyJarsToDemo">

    <mkdir dir="${demoDir}/web/WEB-INF/lib"/>
    <copy todir="${demoDir}/web/WEB-INF/lib" file="${commons-beanutils.jar}" />
    <copy todir="${demoDir}/web/WEB-INF/lib" file="${commons-logging.jar}" />
    <copy todir="${demoDir}/web/WEB-INF/lib" file="${commons-digester.jar}" />
    <copy todir="${demoDir}/web/WEB-INF/lib" file="${commons-collections.jar}" />
    <copy todir="${demoDir}/web/WEB-INF/lib" file="${jstl_el.jar}" />
    <copy todir="${demoDir}/web/WEB-INF/lib" file="${jsf-api.jar}" />
    <copy todir="${demoDir}/web/WEB-INF/lib" file="${jsf-ri.jar}" />
    <copy todir="${demoDir}/web/WEB-INF/lib" file="${standard.jar}" />
    <copy todir="${demoDir}/web/WEB-INF/lib" file="${jstl.jar}" />

  </target>

  <target name="deleteJarsFromDemo">

    <delete file="${demoDir}/web/WEB-INF/lib/commons-beanutils.jar" />
    <delete file="${demoDir}/web/WEB-INF/lib/commons-logging.jar" />
    <delete file="${demoDir}/web/WEB-INF/lib/commons-digester.jar" />
    <delete file="${demoDir}/web/WEB-INF/lib/commons-collections.jar" />
    <delete file="${demoDir}/web/WEB-INF/lib/jstl_el.jar" />
    <delete file="${demoDir}/web/WEB-INF/lib/jsf-api.jar" />
    <delete file="${demoDir}/web/WEB-INF/lib/jsf-ri.jar" />
    <delete file="${demoDir}/web/WEB-INF/lib/standard.jar" />
    <delete file="${demoDir}/web/WEB-INF/lib/jstl.jar" />

  </target>



  <target name="build-all" depends="verifyPreconditions,copyJarsToDemos">

    <ant inheritAll="false" dir="${basedir}/components"/>
    <copy todir="cardemo/web/WEB-INF/lib" 
          file="components/build/${webapp}/WEB-INF/lib/demo-components.jar"/>
    <copy todir="imageMapRender/web/WEB-INF/lib" 
          file="components/build/${webapp}/WEB-INF/lib/demo-components.jar"/>
    <ant inheritAll="false" dir="${basedir}/helloDuke"/>
    <ant inheritAll="false" dir="${basedir}/guessNumber"/>
    <ant inheritAll="false" dir="${basedir}/cardemo"/>
    <ant inheritAll="false" dir="${basedir}/imageMapRender"/>
    <ant inheritAll="false" dir="${basedir}/nonjsp"/>

  </target>

  <target name="verifyPreconditions">

    <antcall target="checkRequiredFile">
       <param name="file" value="${standard.jar}"/>
       <param name="fail.message" value="${standard.jar} must exist."/>
    </antcall>

    <antcall target="checkRequiredFile">
       <param name="file" value="${jstl.jar}"/>
       <param name="fail.message" value="${jstl.jar} must exist."/>
    </antcall>

  </target>

  <target name="checkRequiredFile">
    <available file="${file}" property="requirement.satisfied"/>
    <antcall target="checkRequired.fail"/>
  </target>

  <target name="checkRequired.fail" unless="requirement.satisfied">
    <fail message="${fail.message}"/>
  </target>

</project>
