<navigation>

    <!-- Successful login -->
    <rule>
        <page>/login.jsp</page>
        <action>UserBean</action>
        <outcome>success</outcome>
        <select>/home.jsp</select>
    </rule>

    <!-- New User Registration -->
    <rule>
        <page>/login.jsp</page>
        <action>UserBean.register</action>
        <outcome>success</outcome>
        <select>/get-user-info.jsp</select>
    </rule>

    <!-- Failure outcome for either case -->
    <rule>
        <page>/login.jsp</page>
        <!-- Note that action omitted -->
        <outcome>failure</outcome>
        <select>/login-retry.jsp</select>
    </rule>

    <!-- Global logout button -->
    <rule>
        <!-- Does not matter what page we are on -->
        <action>UserBean.logout</action>
        <!-- Does not matter what outcome was returned -->
        <select>/logout.jsp</select>
    </rule>

    <!-- Handle a general "MustLogin" but as -->
    <!-- an outcome, not a message -->
    <rule>
        <outcome>MustLogin</outcome>
        <select>/must-login-first.jsp</select>
    </rule>

    <!-- Catch-all rule for the "cannot happen" case -->
    <rule>
        <select>/oops-cannot-happen.jsp</select>
    </rule>

</navigation>
